<div class="register-form width-form">
   <h2 class="title">Sign up</h2>
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= render "devise/shared/error_messages", resource: resource %>
   <div class="field">
      <%= f.label :name , "Username"%>
      <%= f.text_field :name, class:"input-data-form" %>
   </div>
   <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-data-form" %>
   </div>
   <div class="field">
      <%= f.label :age %>
      <%= f.number_field :age, class:"input-data-form" %>
   </div>
   <div class="field ">
      <%= f.label :avatar %>
      <%= f.file_field :avatar,  class:"image-upload" %>
   </div>
   <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" , class:"input-data-form"%>
   </div>
   <div class="field">
      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirm, autocomplete: "new-password", class:"input-data-form" %>
   </div>
   <div class="actions">
      <%= f.submit "Sign up" %>
   </div>
   <% end %>

   <div class="field redirect-account ">
       <%= link_to "Already have an account?", new_session_path(resource_name) %>
   <div>
</div>