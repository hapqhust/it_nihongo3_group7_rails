<p id="notice"><%= notice %></p>

<h1>Restaurant Food Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Restaurant food</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurant_food_reviews.each do |restaurant_food_review| %>
      <tr>
        <td><%= restaurant_food_review.user_id %></td>
        <td><%= restaurant_food_review.restaurant_food_id %></td>
        <td><%= restaurant_food_review.review %></td>
        <td><%= link_to 'Show', restaurant_food_review %></td>
        <td><%= link_to 'Edit', edit_restaurant_food_review_path(restaurant_food_review) %></td>
        <td><%= link_to 'Destroy', restaurant_food_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

